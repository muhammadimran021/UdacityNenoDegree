<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_card"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_name"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@id/img_card"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
        android:text="Grade"
        android:layout_toRightOf="@id/img_card" />

    <TextView
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:layout_below="@+id/txt_grade"
        android:layout_toRightOf="@+id/img_card"
        android:layout_toEndOf="@+id/img_card" />

    <TextView
        android:id="@+id/txt_classAttend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Attend"
        android:layout_below="@+id/img_card"
        android:layout_alignLeft="@+id/txt_position"
        android:layout_alignStart="@+id/txt_position" />

</RelativeLayout>