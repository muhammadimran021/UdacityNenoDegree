<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e99898"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/productImage_View"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/androidstoreicon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProdutNAme"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/product_QuantityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PQuantity" />

        <TextView
            android:id="@+id/product_priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Produtprice" />

    </LinearLayout>

</LinearLayout>