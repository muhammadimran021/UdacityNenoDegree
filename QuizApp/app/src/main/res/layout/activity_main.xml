<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3711df"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.quizapp.MainActivity">

    <TextView
        android:id="@+id/quiz_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/application_TextView"
        android:layout_centerHorizontal="true"
        android:text="QUIZ"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/application_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Application"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/application_TextView"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="APP !"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="#fff"
        android:text="Start QUIZ Now "
        android:textSize="20sp"
        android:textStyle="bold"
        />
</RelativeLayout>
